@using StorForStudentsWebApp.Models
@model List <StorForStudentsWebApp.Models.ItemModel>

<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model[0].ImagePath)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].Quantity)
        </th>

    </tr>

    @foreach (ItemModel item in Model) {
        <tr>
            <td>
                <div>
                    <img src="@item.ImagePath" height="100px">
                </div>
            </td>
            <td>
                @Html.ActionLink(@item.Name, "Details/" + item.Id)
            </td>
            <td>
                @Html.DisplayFor(model => item.Price)
            </td>
            <td>
                @Html.DisplayFor(model => item.Quantity)
            </td>
        </tr>
    }
</table>



